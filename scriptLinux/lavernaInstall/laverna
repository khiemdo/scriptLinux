server {
	listen 80 fnick2812Pi;
	listen [::]:80 fnick2812Pi;
	
	listen 443 ssl;
	ssl_certificate /etc/ssl/certs/fnick2812Pi.crt;
	ssl_certificate_key /etc/ssl/private/fnick2812Pi.key;
	
	root /var/www/html;

	index index.html index.htm index.nginx-debian.html;

	server_name _;

	location / {
		# First attempt to serve request as file, then
		# as directory, then fall back to displaying a 404.
		try_files $uri $uri/ =404;
	}
}
